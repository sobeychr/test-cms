---
import { Form } from '@components/form/Form.tsx';
import DefaultLayout from '@layouts/Default.astro';
import { API_PREFIX } from '@utils/configs';
import styles from '@styles/pages/login.module.scss';

const formUrl = `${API_PREFIX}v1/login`;
---

<DefaultLayout>
  <Form
    action={formUrl}
    autocomplete="off"
    class={styles.form}
    client:visible="solid-js"
    defaultRequest
    loadingClass={styles.loading}
  >
    <h1>Login page</h1>
    <label for="email">Email</label>
    <input
      type="email"
      autofocus
      id="email"
      minlength="6"
      maxlength="32"
      name="email"
      placeholder="test@email.com"
      required
      value=""
    />
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      minlength="6"
      maxlength="32"
      name="password"
      placeholder={'*'.repeat(8)}
      required
    />
    <button class={`${styles.submit} after-icon`} type="submit">Login</button>
  </Form>
</DefaultLayout>
